<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@drawable/custom_bg_round_white"
        android:backgroundTint="#E4E4E4"
        android:elevation="@dimen/_3sdp"
      >

        <TextView
            android:id="@+id/tv_label_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/item_label_name"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/item_label_age"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@id/tv_label_name"
            app:layout_constraintTop_toBottomOf="@id/tv_label_name"
            />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_age"
            app:layout_constraintTop_toTopOf="@id/tv_label_age" />

        <TextView
            android:id="@+id/tv_label_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/item_label_job_title"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@id/tv_label_age"
            app:layout_constraintTop_toBottomOf="@id/tv_label_age"
            />

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_job"
            app:layout_constraintTop_toTopOf="@id/tv_label_job" />

        <TextView
            android:id="@+id/tv_label_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/item_label_gender"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@id/tv_label_job"
            app:layout_constraintTop_toBottomOf="@id/tv_label_job"
            />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/color_0f183e"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_gender"
            app:layout_constraintTop_toTopOf="@id/tv_label_gender" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>